<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MainMenu"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/homem_sentado_de_bone_2" />

    <Button
        android:id="@+id/button_back_rides"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/botao_inicial"
        android:onClick="previousRides" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.unicar.BottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_bottom_bar" />

</LinearLayout>